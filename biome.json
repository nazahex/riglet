{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "root": true,
  "files": {
    "includes": [
      "**",
      "!**/*.md",
      "!**/*.mdx",
      "!**/*.yml",
      "!**/*.yaml",
      "!**/.artifacts",
      "!**/.turbo",
      "!**/.gpr",
      "!**/dist",
      "!**/temp"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "useEditorconfig": true
  },
  "linter": {
    "rules": {
      "recommended": true,
      "suspicious": { "noDoubleEquals": "error" }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    }
  }
}
